<% if object != current_user %>
  <% if current_user.is_friend?(object) %>
    <%= link_to 'Unfriend', friendship_path(object), method: :delete, class: "btn btn-warning" %>
  <% else %>
    <%= link_to 'Friend', friendships_path(friend_id: object), method: :post, class: "btn btn-default" %>
  <% end %>
<% end %>