<!-- restaurants list，有多寫restaurant-item的class style -->
<% @restaurants.each do |restaurant| %>
  <div class="col-sm-6 col-md-4">
    <div class="restaurant-item">
      <img src="http://via.placeholder.com/200x160">
      <!-- <%= image_tag restaurant.image, class: "img-responsive center-block" %> -->
      <div class="caption">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p class="label label-default"><%= restaurant.category.name %><p>
        <p><%= truncate(restaurant.description, length: 70) %></p>
        <%= render partial: "shared/favorite", locals: {object: restaurant} %>
        <%= render partial: "shared/like", locals: {object: restaurant} %>
      </div>
    </div>
  </div>
<% end %>
<div class="clearfix"></div>
      
<!-- 有generate kaminari paginate bootstrap style -->
<div class="text-center">
  <%= paginate @restaurants %>
</div>