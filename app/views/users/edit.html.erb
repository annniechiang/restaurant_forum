<div class="container">
  <div class="row">

  <h2>Edit Profile</h2>

  <br>

  <%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :name, "Last Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :intro, "自我介紹" %>
      <%= f.text_area :intro, class: "form-control" %>
    </div>

    <!--
    <div class="form-group">
      <%= f.label :avatar, "大頭照上傳" %>
      <%= image_tag @user.avatar, width: '300px' if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>
    -->

    <br><br>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to 'Cancel', user_path(@user), class: "btn btn-default" %>
    </div>

  <% end %>

  </div>
</div>