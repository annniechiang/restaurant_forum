<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <p>[<%= @restaurant.category.name %>]</p>
    </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image, class: "img-responsive center-block" %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>

    <div class="clearfix"></div>

    <hr>

    <div class="text-center">
      <%= link_to 'Edit', edit_admin_restaurant_path(@restaurant), class: "btn btn-warning btn-sm" %>
      &nbsp
      <%= link_to 'Delete', admin_restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
      &nbsp 
      <%= link_to 'Back to index', admin_restaurants_path, class: "btn btn-success" %>
    </div>

  </div>
</div>